<h1>Posts</h1>


<% if @posts.nil? %>
  <p>No posts.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <% if @is_admin %>
          <th>Author</th>
        <% end %>
        <th>Title</th>
        <th>Body</th>
        <th>Published</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <% if @is_admin %>
            <td><%= post.user_id %></td>
          <% end %>
          <td><%= truncate post.title %></td>
          <td><%= truncate post.body %></td>
          <td><%= post.published %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
