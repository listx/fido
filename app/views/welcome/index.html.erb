<h1>FIDO: Federal Incorporated Dogs. <em>Organized.</em></h1>

<% if !notice.nil? %>
  <p id="notice"><%= notice %></p>
<% end %>

<div>
  <% @posts.sort {|a, b| b.created_at <=> a.created_at }.each do |post| %>
      <h3 class="post-title"><%= link_to post.title, post %></h3>
      <p class="post-date"><%= post.created_at.to_formatted_s(:long) %></p>
      <p class="post-body">
        <%= simple_format truncate(\
          post.body,
          length: 300,
          separator: ' ', omission: ' ... ')\
            { link_to "(read more)", post }
        %>
      </p>
  <% end %>
  <%= will_paginate @posts %>
</div>
